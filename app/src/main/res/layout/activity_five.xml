<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiveActivity">

    <include
        layout="@layout/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_npc_one"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_margin="24dp"
        android:src="@drawable/asset_npc_one"
        app:layout_constraintBottom_toTopOf="@id/btn_prev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/img_convo_one"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="-48dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/asset_convo_one"
        app:layout_constraintBottom_toTopOf="@+id/img_npc_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_convo_two"/>

    <ImageView
        android:id="@+id/img_convo_two"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:src="@drawable/asset_convo_two"
        android:layout_marginBottom="-10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/img_npc_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_convo_one"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_grass"
        android:layout_marginStart="-60dp"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_grass"
        android:layout_marginEnd="-84dp"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/btn_prev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/asset_button_prev"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintEnd_toStartOf="@id/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/asset_btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>