<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sky"
    tools:context=".FiveActivity">

    <ImageView
        android:id="@+id/img_cloud4"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_cloud"
        android:layout_marginEnd="-58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/img_cloud5"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_cloud"
        android:layout_marginTop="40dp"
        android:layout_marginStart="-70dp"
        app:layout_constraintTop_toBottomOf="@id/img_cloud4"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/img_cloud6"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginEnd="-80dp"
        android:src="@drawable/asset_cloud"
        app:layout_constraintTop_toBottomOf="@id/img_cloud5"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_cloud"
        android:layout_marginStart="-80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_cloud6"
        />

    <ImageView
        android:id="@+id/img_npc_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/asset_npc_one"
        app:layout_constraintBottom_toTopOf="@id/img_grass1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_cloud6" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="-52dp"
        android:src="@drawable/asset_convo_one"
        app:layout_constraintBottom_toTopOf="@+id/img_npc_one"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/asset_convo_two"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/img_npc_one"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_grass1"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_grass"
        android:layout_marginStart="-60dp"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_grass"
        android:layout_marginEnd="-84dp"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>