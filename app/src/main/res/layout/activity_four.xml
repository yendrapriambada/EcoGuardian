<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sky"
    tools:context=".FourActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/asset_cloud"
        android:layout_marginEnd="-56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="-72dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/asset_cloud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_content_one"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:src="@drawable/asset_img_one"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-88dp"
        android:src="@drawable/asset_cloud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_content_one" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="-88dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/asset_cloud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_content_one" />

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amatilah gambar di atas!"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_content_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_question1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="apa didaerah sekitarmu terdapat perubahan lingkangan?
ayo tuliskan apa saja yang menjadi faktor perubahan lingkungan!"
        android:textSize="15dp"
        android:gravity="center_vertical|center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/asset_bg_input_one"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_question1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_grass1"/>

    <ImageView
        android:id="@+id/img_grass1"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_grass"
        android:layout_marginStart="-60dp"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/asset_grass"
        android:layout_marginEnd="-84dp"
        android:layout_marginBottom="-12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>