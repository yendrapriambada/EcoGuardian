    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#7D9E47"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                style="@style/TextTitlePoppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Soal Pertanyaan"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/soal_pertanyaan"
                style="@style/TextRegularPoppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:alpha="0"
                android:justificationMode="inter_word"
                android:text="Bagian ini diisi oleh soal pertanyaan. Silahkan isi melalui GSheet!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:alpha="1" />

            <Button
                android:id="@+id/btn_opsi_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0"
                android:text="Pilihan jawaban opsi A. Ini adalah template testing jawaban opsi A."
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/soal_pertanyaan"
                app:layout_constraintStart_toStartOf="@+id/soal_pertanyaan"
                app:layout_constraintTop_toBottomOf="@+id/soal_pertanyaan"
                tools:alpha="1" />

            <Button
                android:id="@+id/btn_opsi_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0"
                android:text="opsiB"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_opsi_a"
                app:layout_constraintStart_toStartOf="@+id/btn_opsi_a"
                app:layout_constraintTop_toBottomOf="@+id/btn_opsi_a"
                tools:alpha="1" />

            <Button
                android:id="@+id/btn_opsi_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0"
                android:text="opsiC"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_opsi_b"
                app:layout_constraintStart_toStartOf="@+id/btn_opsi_b"
                app:layout_constraintTop_toBottomOf="@+id/btn_opsi_b"
                tools:alpha="1" />

            <Button
                android:id="@+id/btn_opsi_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0"
                android:text="opsiD"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/btn_opsi_c"
                app:layout_constraintStart_toStartOf="@+id/btn_opsi_c"
                app:layout_constraintTop_toBottomOf="@+id/btn_opsi_c"
                tools:alpha="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="-60dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/asset_grass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginEnd="-84dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/asset_grass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
